<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_carga_maestro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.camilodesarrollo.abicap.com.example.rene.abicap.CargaMaestro">



    <Button
        android:text="Cargar Archivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLeerArchivo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/botonamarillo"
        android:textStyle="normal|bold" />

    <TextView
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignBaseline="@+id/tvNumeroCarga"
        android:layout_alignBottom="@+id/tvNumeroCarga"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNumeroFinal"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toEndOf="@+id/textView15"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/tvNumeroCarga"
        android:textAlignment="textEnd"
        android:layout_below="@+id/progressBar"
        android:layout_toStartOf="@+id/textView15"
        android:textStyle="normal|bold"
        android:textSize="20sp" />

    <Button
        android:text="Guardar en Equipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGuardar"
        android:layout_below="@+id/textView18"
        android:layout_marginTop="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/botonverde"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnMenuPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvNumeroCarga"
        android:layout_marginTop="16dp"
        android:background="@drawable/botonazul"
        android:text="Menu"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLeerArchivo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Cantidad de Registros"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnGuardar"
        android:layout_marginTop="17dp"
        android:maxHeight="80dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCantidadRegistros"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnMenuPrincipal"
        android:text="Una vez que la carga se complete esta ventana se cerrara"
        android:textAlignment="center" />


</RelativeLayout>
