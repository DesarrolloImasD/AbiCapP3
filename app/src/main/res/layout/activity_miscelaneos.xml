<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_miscelaneos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.camilodesarrollo.abicap.com.example.rene.abicap.Miscelaneos">


    <TextView
        android:text="Captura de Datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView28"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Chequeo por Duplicado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="38dp"
        android:id="@+id/chkPorDuplicado"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <CheckBox
        android:text="Validar Contra Archivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkPorDuplicado"
        android:layout_alignStart="@+id/chkPorDuplicado"
        android:layout_marginTop="16dp"
        android:id="@+id/chkContraArchivo"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="ID CAPTURADOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkMostrarDescripcion"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/textView29"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView29"
        android:layout_marginTop="24dp"
        android:id="@+id/edIdCapturador"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:hint="IDENTIFICADOR"
        android:layout_alignEnd="@+id/textView29"
        android:maxLength="10" />

    <Button
        android:text="MENU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnMenuPrincipalMiscelaneos"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/botonazul"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <Button
        android:text="CAMBIAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edIdCapturador"
        android:id="@+id/btnCambiarID"
        android:background="@drawable/botonverde"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/edIdCapturador"
        android:textStyle="normal|bold" />

    <CheckBox
        android:text="Mostrar DescripciÃ³n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/chkMostrarDescripcion"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:layout_below="@+id/chkContraArchivo"
        android:layout_alignStart="@+id/chkContraArchivo" />

    <TextView
        android:id="@+id/tvModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edIdCapturador"
        android:gravity="center"
        android:text="Modelo:" />
</RelativeLayout>
